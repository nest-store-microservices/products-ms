generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model Product {
  id Int @id @default(autoincrement())
  name String  
  description String?
  price Float @default(0)
  stock Int @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}